    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://cdn.jsdelivr.net/jquery.velocity/0.9.0/jquery.velocity.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {

        var chalk = $('#chalk');

        var step = 1;

        chalk.on('click', function () {
            chalk.find('.intro').fadeOut(function () {
                play1();

                

            });
        });

        $(document).on('keyup', function (e) {
            if (e.which == 32) {    
                step++;

                if (step == 2) {
                    play2();
                } else if (step == 3) {
                    play3();
                } else {
                    stopAudio();
                    clearBoard();
                }
            }
        })


        function stopAudio () {
            var audios = document.getElementsByTagName('audio');
            for (var i = 0; i < audios.length; i++) {
                audios[i].pause();
            }
        }

        var time1, time2, time3;

        function clearBoard () {
            window.clearTimeout(time1);
            window.clearTimeout(time2);
            window.clearTimeout(time3);
            $('.intro').fadeOut();
            $('.step1').fadeOut();
            $('.step2').fadeOut();
            $('.step3').fadeOut();
            $('.step4').fadeOut();
        }

        function play1 () {
            stopAudio();
            clearBoard();
            var audio1 = document.getElementById('audio1');
                audio1.play();

            time1 = window.setTimeout(function () {
                $('.step1').fadeIn();
                time1 = window.setTimeout(function () {
                    $('.step1').fadeOut(function () {
                        play2();
                        
                        
                    });
                }, 20000)
            }, 100);
        }

        function play2 () {
            stopAudio();
            clearBoard();
            step = 2;
            var audio2 = document.getElementById('audio2');
                audio2.play();

            // STEP 1 DONE STEP 2 NOW
            time2 = window.setTimeout(function () {
                $('.step2').fadeIn(function () {
                    time2 = window.setTimeout(function () {
                        $('.step2').fadeOut(function (){
                            play3();
                        })
                    }, 29000);
                });
            }, 100);
        }

        function play3 () {
            stopAudio();
            clearBoard();
            step = 3;
            var audio3 = document.getElementById('audio3');
                audio3.play();

            $('.step3').fadeIn();
            chalk.find('img').attr('src', 'images/resto.jpg')

            time3 = window.setTimeout(function () {
                $('.step3').fadeIn(function () {
                    time3 = window.setTimeout(function () {
                        $('.step4').fadeIn(function (){
                            time3 = window.setTimeout(function () {
                                $('.step3').fadeOut();
                                $('.step4').fadeOut();
                            }, 53000)
                        })
                    }, 300);
                });
            }, 100);
        }



    });
    </script>
</body>
